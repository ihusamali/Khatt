<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6C7689"
    android:weightSum="3.5"
    tools:context=".SignUp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/khatt_white"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_weight="0.5">
    <RadioGroup
        android:id="@+id/toggleLater"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/togglebackgroud"
        android:orientation="horizontal">
        <RadioButton
            android:layout_margin="5dp"
            android:id="@+id/playlistLater"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/toggleselector"
            android:text="Sign In"
            android:textColor="@color/white" />

        <RadioButton
            android:layout_margin="5dp"
            android:id="@+id/musicLater"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:checked="true"
            android:background="@drawable/toggleselector"
            android:text="Sign Up"
            android:textColor="@color/white" />
    </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.85"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Name"
            android:inputType="text"
            android:layout_gravity="center"
            android:textColorHint="@color/white"
            android:paddingLeft="30dp"
            android:background="@drawable/togglebackgroud"
            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.85"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Phone number"
                android:inputType="number"
                android:layout_gravity="center"
                android:textColorHint="@color/white"
                android:paddingLeft="30dp"
                android:background="@drawable/togglebackgroud"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.85"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Password"
                android:layout_gravity="center"
                android:inputType="numberPassword"
                android:textColorHint="@color/white"
                android:paddingLeft="30dp"
                android:background="@drawable/togglebackgroud"
                />
        </LinearLayout>




    </LinearLayout>

</LinearLayout>